{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/src/index.js",
            "protocol": "inspector",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Windows Logging",
            "program": "${workspaceRoot}/src/index.js",
            "cwd": "${workspaceRoot}",
            "protocol": "auto",
            "runtimeExecutable": ".vscode\\nodeWithBunyan.bat"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Tests",
            "program": "${workspaceRoot}/node_modules/.bin/mocha",
            "cwd": "${workspaceRoot}",
            "args": [
                "-s",
                "0",
                "./tests/all.js"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858,
            "outFiles": [ "${workspaceRoot}/dist/**/*.js" ],
            "sourceMaps": true
        }
    ]
}